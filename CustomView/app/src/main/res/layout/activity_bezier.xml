<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.customview.weight_zpc.bezier.BezierActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="二阶贝塞尔曲线"
        android:textSize="25sp" />

    <com.example.administrator.customview.weight_zpc.bezier.Bezier2View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#3300ff00"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="三阶贝塞尔曲线"
        android:textSize="25sp" />

    <com.example.administrator.customview.weight_zpc.bezier.Bezier3View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#3300ff00"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/pie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="toPie" />
        <Button
            android:id="@+id/next"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="next"/>
    </LinearLayout>

</LinearLayout>
